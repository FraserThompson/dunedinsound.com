  "devDependencies": {
    "@babel/eslint-parser": "^7.21.8",
    "@babel/preset-react": "^7.22.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.1.3",
    "eslint": "^8.42.0",
    "eslint-plugin-react": "^7.32.2",
    "fast-glob": "^3.2.12",
    "gatsby-plugin-s3": "../gatsby-plugin-s3/gatsby-plugin-s3",
    "md5-file": "^5.0.0",
    "prettier": "^2.8.8",
    "yaml": "^2.3.1"
  },
  "homepage": "https://dunedinsound.com",
  "keywords": [
    "dunedinsound"
  ],
  "license": "MIT",
  "main": "n/a",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FraserThompson/dunedinsound.com.git"
  },
  "scripts": {
    "audio": "docker-compose up --build && node ./scripts/copy_audio.js",
    "lint": "./node_modules/.bin/eslint --ext .js,.jsx --ignore-pattern public .",
    "format": "prettier --trailing-comma es5 --no-semi --single-quote --write 'src/**/*.js' 'src/**/*.md'",
    "develop": "cross-env NODE_OPTIONS=--max-old-space-size=25000 gatsby develop --port=8000",
    "new": "node ./scripts/generate_gig.js",
    "start": "npm run develop",
    "build": "cross-env GATSBY_CPU_COUNT=4 NODE_OPTIONS=--max-old-space-size=25000 gatsby build --verbose",
    "deploy": "node -r dotenv/config ./node_modules/gatsby-plugin-s3/bin.js deploy -y",
    "build-deploy": "npm run build && npm run deploy",
    "copy-to-dev": "node ./scripts/copy-dev.js to",
    "copy-from-dev": "node ./scripts/copy-dev.js from",
    "fix-heap": "$env:NODE_OPTIONS='--max-old-space-size=25000'",
    "fix-semi": "eslint --quiet --ignore-pattern node_modules --ignore-pattern public --parser babel-eslint --no-eslintrc --rule '{\"semi\": [2, \"never\"], \"no-extra-semi\": [2]}' --fix gatsby-node.js"
  }
